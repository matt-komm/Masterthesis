	\parbox{\textwidth}{
	\parbox{\textwidth}{\textsc{\large #1} \rule[1.5mm]{4cm}{0.2pt}}
	\colorbox{white}{\line(0,1){50} \parbox{\textwidth}{\vspace{0.2cm} \hspace{0.4cm}\small{#2}} \put(-6.0,0.0){\line(0,-1){50}}}
	\parbox{\textwidth}{\hspace{\fill} \rule[5mm]{6cm}{0.2pt}}
	}
}

